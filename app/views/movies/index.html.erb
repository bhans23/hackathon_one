<h1>Movies!</h1>
<%= link_to "Create a New Movie", new_movie_path %>
<div class="container">
	<% @movies.each do |movie| %>
		<div class="card">
         <div class="card-img-top">
            <%= movie.image ? (link_to image_tag(movie.image), movie) : "No Movie Image" %>
         </div>
         <div class="card-body">
               <div class="card-title">
                  <%= movie.title %>
               </div>
               <%= link_to "Movie Description", movie.description, class: "card-text" %>
               <br />
               <%= link_to "Go to Movie", movie, class: "btn btn-primary" %>
         </div>
		</div>
	<% end %>
</div>
